@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="site.css">
    <link href="site.js">
    <script src="https://kit.fontawesome.com/797356307c.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.17/vue.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="container">
        <div class="row">
    <div class="twittersidebar  col-lg-2">
        <i class="fab fa-twitter"></i>
        <div class="sidebar">
            <span class="material-icons">
                home
            </span>
            <h2>Home</h2>
        </div>
        <div class="sidebar">
            <span class="material-icons">
                tag
            </span>
            <h2>Explore</h2>
        </div>
        <div class="sidebar">
            <span class="material-icons">
                notifications
            </span>
            <h2>Notifications</h2>
        </div>
        <div class="sidebar">
            <span class="material-icons">
                local_post_office
            </span>
            <h2>Messages</h2>
        </div>
        <div class="sidebar">
            <span class="material-icons">
                bookmarks
            </span>
            <h2>Bookmarks</h2>
            </div>
        <div class="sidebar">
            <span class="material-icons">
                list_alt
            </span>
            <h2>Lists</h2>
        </div>
        <div class="sidebar">
            <span class="material-icons">
                person_outline
            </span>
            <h2>Profile</h2>
        </div>
        <div class="sidebar">
            <span class="material-icons">
                more_horiz
            </span>
            <h2>More</h2>
        </div>
        <button class="sidebarTweet">
            Tweet
        </button>
    </div>
    <div class="feed col-lg-4">
    
        <div class="feedHeader">
            <h2>Home</h2>
        </div>
       <form class="tweetBox"method="post">
<div class="boxInput">
      <img src="https://www.the-sun.com/wp-content/uploads/sites/6/2021/12/LM_BrunoEncanto_Comp-1.jpeg" alt="" />
    <input asp-for="@Model.Post.Content" placeholder="What's happening?'" type= "text" name"post"/>
        <button type="submit" class="btn btn-primary">Post Tweet</button>
</div>
</form>
        @foreach (var obj in Model.Posts)
        {
         <ul id="heading" class="postBody">
             <img src="https://www.the-sun.com/wp-content/uploads/sites/6/2021/12/LM_BrunoEncanto_Comp-1.jpeg" alt="" />
             <li class="postText">@obj.Content</li>
         <div class="icons">
<span class="btn_up" onclick ="myFunction(this)" name="button1" type="button1" style="font-size:20px"> <i class="far fa-heart"></i></span> 
<span class="btn_down" onclick ="myFunction(this)" name="button2" type="button2" style="font-size:20px" > <i class="far fa-angry"></i></span>
<span class="trashBtn" onclick='remove()'><i class="fas fa-trash-alt"></i> </span>
</div> 

  <input type="text" id="comment-box" placeholder="Enter comment" name: "comment-box">
    <button class="postBtn" id ="post">Post</button>
    <ul class="commentBox" id="unordered">
       
   </ul>
</ul>
        }
  </div>   
    <div class="searchBar col-lg-4">
     <div class="searchIcon">
     <input type ="text" placeholder="Search" />
 </div>
 <div class= "RightTweetContainer">
     <h2>What's happening?</h2>
     <blockquote class="twitter-tweet"><p lang="en" dir="ltr">While the question of whether we are truly alone in the universe remains unanswered, this is certainly a raccoon eating jelly.<br><br>📹: Reddit user lmaosmh <a href="https://t.co/b2dr6bsBO0">pic.twitter.com/b2dr6bsBO0</a></p>&mdash; Paul Bronks for Lovina Animal Welfare (@@slender_sherbet) <a href="https://twitter.com/slender_sherbet/status/1488253894350233602?ref_src=twsrc%5Etfw">January 31, 2022</a></blockquote> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
 </div>
    </div>
    </div>
    </div>
</body>

</html>


